{
    "version": 2,
    "configurePresets": [
        {
            "name": "base",
            "description": "Shared configuration presets",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
            }
        },
        {
            "name": "linux-debug",
            "displayName": "Linux Debug",
            "description": "Build on Linux (debug).",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": {
                    "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                    "type": "FILEPATH"
                }
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": ["Linux"]
                },
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
                }
            }
        },
        {
            "name": "linux-release",
            "displayName": "Linux Release",
            "description": "Build on Linux (release).",
            "inherits": "linux-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "windows-debug",
            "displayName": "Windows Debug",
            "description": "Build on Windows with Visual Studio (debug).",
            "inherits": "base",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_COMPILER": "cl",
                "CMAKE_TOOLCHAIN_FILE": {
                    "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                    "type": "FILEPATH"
                }
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": ["Windows"]
                }
            }
        },
        {
            "name": "windows-release",
            "displayName": "Windows Release",
            "description": "Build on Windows with Visual Studio (release).",
            "inherits": "windows-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "macos-x86-debug",
            "displayName": "macOS Debug (x86 architecture)",
            "description": "Build on macOS (debug; x86 architecture).",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": {
                    "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                    "type": "FILEPATH"
                },
                "CMAKE_OSX_ARCHITECTURES": "x86_64",
                "VCPKG_HOST_TRIPLET": "arm64-osx",
                "VCPKG_TARGET_TRIPLET": "x64-osx"
            }
        },
        {
            "name": "macos-x86-release",
            "displayName": "macOS Release (x86 architecture)",
            "description": "Build on macOS (release; x86 architecture).",
            "inherits": "macos-x86-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "macos-arm-debug",
            "displayName": "macOS Debug (ARM architecture)",
            "description": "Build on macOS (debug; ARM architecture).",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": {
                    "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                    "type": "FILEPATH"
                },
                "CMAKE_OSX_ARCHITECTURES": "arm64",
                "VCPKG_HOST_TRIPLET": "arm64-osx",
                "VCPKG_TARGET_TRIPLET": "arm64-osx"
            }
        },
        {
            "name": "macos-arm-release",
            "displayName": "macOS Release (ARM architecture)",
            "description": "Build on macOS (release; ARM architecture).",
            "inherits": "macos-arm-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug-build-linux",
            "displayName": "Default",
            "configurePreset": "linux-debug",
            "description": "Linux debug build"
        },
        {
            "name": "release-build-linux",
            "displayName": "Release",
            "configurePreset": "linux-release",
            "description": "Linux release build"
        },
        {
            "name": "debug-build-windows",
            "displayName": "Default",
            "configurePreset": "windows-debug",
            "description": "Windows debug build"
        },
        {
            "name": "release-build-windows",
            "displayName": "Release",
            "configurePreset": "windows-release",
            "description": "Windows release build"
        },
        {
            "name": "debug-build-macos-x86",
            "displayName": "Default",
            "configurePreset": "macos-x86-debug",
            "description": "macOS debug build (x86 architecture)"
        },
        {
            "name": "release-build-macos-x86",
            "displayName": "Release",
            "configurePreset": "macos-x86-release",
            "description": "macOS release build (x86 architecture)"
        },
        {
            "name": "debug-build-macos-arm",
            "displayName": "Default",
            "configurePreset": "macos-arm-debug",
            "description": "macOS debug build (ARM architecture)"
        },
        {
            "name": "release-build-macos-arm",
            "displayName": "Release",
            "configurePreset": "macos-arm-release",
            "description": "macOS release build (ARM architecture)"
        }
    ],
    "testPresets": [
        {
            "name": "core-test-linux",
            "description": "Enable output on failure",
            "configurePreset": "linux-debug",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "core-test-windows",
            "inherits": "core-test-linux",
            "configurePreset": "windows-debug"
        },
        {
            "name": "core-test-macos-x86",
            "inherits": "core-test-linux",
            "configurePreset": "macos-x86-debug"
        },
        {
            "name": "core-test-macos-arm",
            "inherits": "core-test-linux",
            "configurePreset": "macos-arm-debug"
        }
    ]
}
