#define RC_MINOR @PROJECT_VERSION_MINOR @
#define RC_PATCH @PROJECT_VERSION_PATCH @
#define RC_BUILD 0

// Resource version must be comma-separated numbers without spaces
#define RESOURCE_VERSION RC_MAJOR, RC_MINOR, RC_PATCH, RC_BUILD

// Version numbers for code use
#define VERSION_MAJOR RC_MAJOR
#define VERSION_MINOR RC_MINOR
#define VERSION_PATCH RC_PATCH
#define VERSION_BUILD RC_BUILD

// HealthGPS version numbers
#define HEALTHGPS_VERSION_MAJOR RC_MAJOR
#define HEALTHGPS_VERSION_MINOR RC_MINOR
#define HEALTHGPS_VERSION_PATCH RC_PATCH

// Version strings
#define HEALTHGPS_VERSION PROJECT_VERSION
#define HEALTHGPS_VERSION_STRING PROJECT_VERSION

// Define version numbers in the hgps namespace using macros
#define HGPS_VERSION_MAJOR VERSION_MAJOR
#define HGPS_VERSION_MINOR VERSION_MINOR
#define HGPS_VERSION_PATCH VERSION_PATCH
#define HGPS_VERSION HEALTHGPS_VERSION
