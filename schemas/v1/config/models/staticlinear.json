{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/imperialCHEPI/healthgps/main/schemas/v1/config/models/staticlinear.json",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "ModelName": {
            "const": "StaticLinear"
        },
        "InformationSpeed": {
            "type": "number"
        },
        "PhysicalActivityStdDev": {
            "type": "number"
        },
        "RuralPrevalence": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "Name": {
                        "type": "string"
                    },
                    "Female": {
                        "type": "number"
                    },
                    "Male": {
                        "type": "number"
                    }
                },
                "required": [
                    "Name",
                    "Female",
                    "Male"
                ],
                "additionalProperties": false
            }
        },
        "RegionFile": {
            "$ref": "../csv_file.json",
            "description": "CSV file containing region assignment probabilities by age and gender"
        },
        "EthnicityFile": {
            "$ref": "../csv_file.json",
            "description": "CSV file containing ethnicity assignment probabilities by age group, gender, and region"
        },
        "IncomeModels": {
            "oneOf": [
                {
                    "type": "object",
                    "description": "Continuous income model (FINCH approach) - calculates continuous income then converts to categories",
                    "properties": {
                        "continuous": {
                            "type": "object",
                            "properties": {
                                "Intercept": {
                                    "type": "number"
                                },
                                "Coefficients": {
                                    "type": "object",
                                    "additionalProperties": {
                                        "type": "number"
                                    }
                                },
                                "IncomeContinuousStdDev": {
                                    "type": "number",
                                    "description": "Standard deviation for continuous income calculation"
                                }
                            },
                            "required": [
                                "Intercept",
                                "Coefficients",
                                "IncomeContinuousStdDev"
                            ],
                            "additionalProperties": false
                        }
                    },
                    "required": ["continuous"],
                    "additionalProperties": false
                },
                {
                    "type": "object",
                    "description": "Categorical income model (India approach) - directly assigns income categories",
                    "additionalProperties": {
                        "type": "object",
                        "properties": {
                            "Intercept": {
                                "type": "number"
                            },
                            "Coefficients": {
                                "type": "object",
                                "additionalProperties": {
                                    "type": "number"
                                }
                            }
                        },
                        "required": [
                            "Intercept",
                            "Coefficients"
                        ],
                        "additionalProperties": false
                    },
                    "minProperties": 1
                }
            ]
        },
        "RiskFactorModels": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "Lambda": {
                        "type": "number"
                    },
                    "StdDev": {
                        "type": "number"
                    },
                    "Intercept": {
                        "type": "number"
                    },
                    "Range": {
                        "type": "array",
                        "items": {
                            "type": "number"
                        },
                        "minItems": 2,
                        "maxItems": 2
                    },
                    "Coefficients": {
                        "additionalProperties": {
                            "type": "number"
                        }
                    },
                    "Policy": {
                        "type": "object",
                        "properties": {
                            "Intercept": {
                                "type": "number"
                            },
                            "Range": {
                                "type": "array",
                                "items": {
                                    "type": "number"
                                },
                                "minItems": 2,
                                "maxItems": 2
                            },
                            "Coefficients": {
                                "additionalProperties": {
                                    "type": "number"
                                }
                            },
                            "LogCoefficients": {
                                "additionalProperties": {
                                    "type": "number"
                                }
                            }
                        },
                        "additionalProperties": true
                    },
                    "Trend": {
                        "type": "object",
                        "properties": {
                            "Intercept": {
                                "type": "number"
                            },
                            "Coefficients": {
                                "type": "object",
                                "additionalProperties": {
                                    "type": "number"
                                }
                            },
                            "LogCoefficients": {
                                "type": "object",
                                "additionalProperties": {
                                    "type": "number"
                                }
                            },
                            "Range": {
                                "type": "array",
                                "items": {
                                    "type": "number"
                                },
                                "minItems": 2,
                                "maxItems": 2
                            },
                            "Lambda": {
                                "type": "number"
                            }
                        },
                        "additionalProperties": true
                    },
                    "ExpectedTrend": {
                        "type": "number"
                    },
                    "ExpectedTrendBoxCox": {
                        "type": "number"
                    },
                    "TrendSteps": {
                        "type": "integer"
                    }
                },
                "additionalProperties": true
            }
        },
        "RiskFactorCorrelationFile": {
            "$ref": "../csv_file.json"
        },
        "PolicyCovarianceFile": {
            "$ref": "../csv_file.json"
        }
    },
    "additionalProperties": true
}
