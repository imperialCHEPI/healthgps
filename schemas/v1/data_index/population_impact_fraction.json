{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/imperialCHEPI/healthgps/main/schemas/v1/data_index/population_impact_fraction.json",
    "type": "object",
    "description": "Schema for Population Impact Fraction configuration and CSV data validation",
    "properties": {
        "enabled": {
            "type": "boolean",
            "description": "Whether PIF analysis is enabled for this simulation"
        },
        "data_root_path": {
            "type": "string",
            "description": "Root path to PIF data directory relative to the main data directory"
        },
        "risk_factor": {
            "type": "string",
            "description": "Risk factor name for PIF data (e.g., Smoking, Diet)"
        },
        "scenario": {
            "type": "string",
            "enum": [
                "Scenario1",
                "Scenario2",
                "Scenario3"
            ],
            "description": "PIF scenario to use for all diseases in the simulation"
        },
        "csv_validation": {
            "type": "object",
            "description": "CSV data validation schema for PIF data files",
            "properties": {
                "columns": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 4,
                    "maxItems": 4,
                    "description": "Expected CSV columns: Gender, Age, YearPostInt, IF_Mean"
                },
                "data_types": {
                    "type": "object",
                    "properties": {
                        "Gender": {
                            "type": "string",
                            "enum": [
                                "integer"
                            ],
                            "description": "Gender code: 0 = female, 1 = male"
                        },
                        "Age": {
                            "type": "string",
                            "enum": [
                                "integer"
                            ],
                            "description": "Age group"
                        },
                        "YearPostInt": {
                            "type": "string",
                            "enum": [
                                "integer"
                            ],
                            "description": "Years post intervention"
                        },
                        "IF_Mean": {
                            "type": "string",
                            "enum": [
                                "number"
                            ],
                            "description": "Population Impact Fraction value (0.0 to 1.0)"
                        }
                    },
                    "required": [
                        "Gender",
                        "Age",
                        "YearPostInt",
                        "IF_Mean"
                    ],
                    "additionalProperties": false
                },
                "constraints": {
                    "type": "object",
                    "properties": {
                        "Gender": {
                            "type": "object",
                            "properties": {
                                "valid_values": {
                                    "type": "array",
                                    "items": {
                                        "type": "integer"
                                    },
                                    "contains": {
                                        "type": "integer",
                                        "minimum": 0,
                                        "maximum": 1
                                    },
                                    "description": "Valid gender codes: 0 (female), 1 (male)"
                                }
                            }
                        },
                        "Age": {
                            "type": "object",
                            "properties": {
                                "minimum": {
                                    "type": "integer",
                                    "minimum": 0
                                },
                                "maximum": {
                                    "type": "integer",
                                    "maximum": 110
                                }
                            }
                        },
                        "YearPostInt": {
                            "type": "object",
                            "properties": {
                                "minimum": {
                                    "type": "integer",
                                    "minimum": 0
                                }
                            },
                            "description": "Years since intervention start (0 = intervention year)"
                        },
                        "IF_Mean": {
                            "type": "object",
                            "properties": {
                                "minimum": {
                                    "type": "number",
                                    "minimum": 0.0
                                },
                                "maximum": {
                                    "type": "number",
                                    "maximum": 1.0
                                }
                            },
                            "description": "PIF values must be between 0.0 and 1.0"
                        }
                    }
                }
            },
            "required": [
                "columns",
                "data_types",
                "constraints"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "enabled",
        "data_root_path",
        "risk_factor",
        "scenario"
    ],
    "additionalProperties": false
}
