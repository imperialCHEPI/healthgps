{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/imperialCHEPI/healthgps/main/schemas/v1/config.json",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "version": {
            "const": 2
        },
        "trend_type": {
            "type": "string",
            "enum": [
                "null",
                "trend",
                "income_trend"
            ],
            "default": "null",
            "description": "Type of trend to apply to risk factors. 'null' = no trends, 'trend' = standard trends, 'income_trend' = income-based trends"
        },
        "income_categories": {
            "type": "string",
            "enum": [
                "3",
                "4"
            ],
            "default": "3",
            "description": "Number of income categories to use. '3' = low, middle, high. '4' = low, lowermiddle, uppermiddle, high"
        },
        "data": {
            "$ref": "config/data.json"
        },
        "inputs": {
            "$ref": "config/inputs.json"
        },
        "modelling": {
            "$ref": "config/modelling.json"
        },
        "running": {
            "$ref": "config/running.json"
        },
        "output": {
            "$ref": "config/output.json"
        },
        "population_impact_fraction": {
            "type": "object",
            "description": "Population Impact Fraction configuration",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "description": "Whether PIF analysis is enabled for this simulation"
                },
                "data_root_path": {
                    "type": "string",
                    "description": "Root path to PIF data files. Can use environment variables like ${PIF_DATA_ROOT}/data or ${HOME}/healthgps-data/data"
                },
                "risk_factor": {
                    "type": "string",
                    "description": "Risk factor name for PIF data (e.g., Smoking, Diet)"
                },
                "scenario": {
                    "type": "string",
                    "enum": [
                        "Scenario1",
                        "Scenario2",
                        "Scenario3"
                    ],
                    "description": "PIF scenario to use for all diseases in the simulation"
                }
            },
            "required": [
                "enabled",
                "data_root_path",
                "risk_factor",
                "scenario"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "version",
        "trend_type",
        "data",
        "inputs",
        "modelling",
        "running",
        "output"
    ],
    "additionalProperties": true
}
